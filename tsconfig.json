{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,                  // 跳过库文件检查
    "outDir": "./dist",                    // 编译输出目录
    "rootDir": "./src",                    // 输入目录
    "resolveJsonModule": true,             // 允许导入 JSON 文件
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
